<Window x:Class="yClocky.SettingsWindow"

        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:yClocky"
        mc:Ignorable="d"
        Title="yClocky Settings" Height="550" Width="350"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Appearance" FontWeight="Bold" Margin="0,0,0,10"/>
            
            <!-- Font -->
            <TextBlock Text="Font Family"/>
            <ComboBox x:Name="FontCombo" Margin="0,0,0,10" SelectionChanged="FontCombo_SelectionChanged">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Source}" FontFamily="{Binding}" FontSize="14"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

            <!-- Colors -->
            <TextBlock Text="Text Color (Hex)"/>
            <TextBox x:Name="TextColorBox" Text="#FFFFFFFF" Margin="0,0,0,10" TextChanged="TextColorBox_TextChanged"/>

            <TextBlock Text="Background Color (Hex)"/>
            <TextBox x:Name="BgColorBox" Text="#00000000" Margin="0,0,0,10" TextChanged="BgColorBox_TextChanged"/>

            <!-- Opacity -->
            <TextBlock Text="Opacity"/>
            <Slider x:Name="OpacitySlider" Minimum="0.1" Maximum="1.0" Value="1.0" Margin="0,0,0,10" ValueChanged="OpacitySlider_ValueChanged" IsMoveToPointEnabled="True"/>

            <Separator Margin="0,10"/>
            <TextBlock Text="Behavior" FontWeight="Bold" Margin="0,0,0,10"/>

            <!-- Toggles -->
            <CheckBox x:Name="ShowDateCheck" Content="Show Date" Margin="0,0,0,5" Checked="Setting_Changed" Unchecked="Setting_Changed"/>
            <CheckBox x:Name="TopmostCheck" Content="Always on Top" Margin="0,0,0,5" Checked="Setting_Changed" Unchecked="Setting_Changed"/>
            <CheckBox x:Name="StartupCheck" Content="Run on Startup" Margin="0,0,0,5" Checked="Setting_Changed" Unchecked="Setting_Changed"/>
            <CheckBox x:Name="GhostModeCheck" Content="Ghost Mode (Fade on Hover)" Margin="0,0,0,5" Checked="Setting_Changed" Unchecked="Setting_Changed"/>
            <CheckBox x:Name="CaptureCheck" Content="Exclude from Capture" Margin="0,0,0,5" Checked="Setting_Changed" Unchecked="Setting_Changed"/>
            <CheckBox x:Name="MultiInstanceCheck" Content="Allow Multiple Instances" Margin="0,0,0,10" Checked="Setting_Changed" Unchecked="Setting_Changed"/>

            <Separator Margin="0,10"/>
            
            <!-- Actions -->
            <Button Content="Close Settings" Height="30" Margin="0,0,0,10" Click="CloseButton_Click"/>
            <Button Content="Exit Application" Height="30" Background="#FFDDDD" Foreground="Red" Click="ExitButton_Click"/>
        </StackPanel>
    </ScrollViewer>
</Window>
